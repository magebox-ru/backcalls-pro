                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </btn_right_position>
                        <btn_custom_css translate="label">
                            <label>Add custom CSS for button</label>
                            <frontend_type>textarea</frontend_type>
                            <comment><![CDATA[Example: #call_btn { margin: 20px; }]]></comment>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </btn_custom_css>
                    </fields>
                </button>
                <popup translate="label">
                    <label>Popup Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <popup_width translate="label">
                            <label>Popup Width</label>
                            <comment>If not set - Auto (recommended)</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </popup_width>
                        <popup_height translate="label">
                            <label>Popup Height</label>
                            <comment>If not set - Auto (recommended)</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
